<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.msc.model.User" table="users" catalog="individual_project">

        <id name="username" type="string">
            <column name="username" length="45" />
            <generator class="assigned" />
        </id>
        <property name="password" type="string">
            <column name="password" length="60" not-null="true" />
        </property>
        <property name="enabled" type="boolean">
            <column name="enabled" not-null="true" />
        </property>
        <set name="userRole" table="user_roles" inverse="true" lazy="true" fetch="select">
            <key>
                <column name="username" length="45" not-null="true" />
            </key>
            <one-to-many class="com.msc.model.UserRole" />
        </set>
        <property name="email" type="string">
            <column name="email" length="45" not-null="true" />
        </property>
        <property name="age" type="integer">
            <column name="age" length="45" not-null="true" />
        </property>
        <!--<property name="gender" type="com.msc.model.User.Gender">
            <column name="gender" length="45" not-null="true" />
        </property>-->
        <property name="birthday" type="string">
            <column name="birthday" length="45" not-null="true" />
        </property>
        <property name="phone" type="string">
            <column name="phone" length="45" not-null="true" />
        </property>
        <property name="country" type="string">
            <column name="country" length="45" not-null="true" />
        </property>
        <!--<property name="id" type="string">
            <column name="id" not-null="true" />
        </property>-->
        <property name="id" type="integer">
            <column name="id" length="45" not-null="true" />
        </property>
    </class>
</hibernate-mapping>
